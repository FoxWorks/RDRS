# GNU Make solution makefile autogenerated by Premake
# Type "make help" for usage help

ifndef config
  config=debug32
endif
export config

PROJECTS := simc rdrs rdrs_test

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

simc: 
	@echo "==== Building simc ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f simc.make

rdrs: simc
	@echo "==== Building rdrs ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f rdrs.make

rdrs_test: rdrs simc
	@echo "==== Building rdrs_test ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f rdrs_test.make

clean:
	@${MAKE} --no-print-directory -C . -f simc.make clean
	@${MAKE} --no-print-directory -C . -f rdrs.make clean
	@${MAKE} --no-print-directory -C . -f rdrs_test.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "   debug32"
	@echo "   release32"
	@echo "   debugdynamic32"
	@echo "   releasedynamic32"
	@echo "   debugsinglethread32"
	@echo "   releasesinglethread32"
	@echo "   debugsinglethreaddynamic32"
	@echo "   releasesinglethreaddynamic32"
	@echo "   debug64"
	@echo "   release64"
	@echo "   debugdynamic64"
	@echo "   releasedynamic64"
	@echo "   debugsinglethread64"
	@echo "   releasesinglethread64"
	@echo "   debugsinglethreaddynamic64"
	@echo "   releasesinglethreaddynamic64"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   simc"
	@echo "   rdrs"
	@echo "   rdrs_test"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"
